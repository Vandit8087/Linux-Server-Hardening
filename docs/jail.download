[DEFAULT]
# Default settings for all jails
bantime = 3600
findtime = 600
maxretry = 3
backend = systemd

# Email configuration (optional)
# destemail = admin@yourdomain.com
# sender = fail2ban@yourdomain.com
# action = %(action_mwl)s

[sshd]
enabled = true
port = 2022
filter = sshd
logpath = /var/log/auth.log
maxretry = 3
bantime = 3600
findtime = 600

[nginx-http-auth]
enabled = false
port = http,https
filter = nginx-http-auth
logpath = /var/log/nginx/error.log

[apache-auth]
enabled = false
port = http,https
filter = apache-auth  
logpath = /var/log/apache2/error.log